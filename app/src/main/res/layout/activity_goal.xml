<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fitness_foto4"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Hedef Belirleme Başlığı -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Fitness Hedeflerinizi Belirleyin"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Haftalık Spor Günü Giriş Alanı -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Kaç gün(ler) spor yapacaksınız?">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/workoutDaysEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHighlight="#090909"
                android:textColorHint="#040303"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Haftalık Saat Giriş Alanı -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Kaç saat spor yapacaksınız?">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/workoutTimeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Tür Giriş Alanı -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Hangi tür spor yapacaksınız(Fitness,Kardiyo)?">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/workoutTypeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Hedef Kaydet Butonu -->
        <Button
            android:id="@+id/saveGoalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF5722"
            android:padding="12dp"
            android:text="Hedefi Kaydet"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:onClick="oncekiSayfayaDon"
            android:text="Önceki Sayfaya Dön"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0B4949"
            android:onClick="devamEt"
            android:text="Devam Et"
            android:textSize="16sp">

        </Button>

        <Button
            android:id="@+id/stepButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adım Sayarı Aç" />

    </LinearLayout>
</ScrollView>
