<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fitness_foto5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Egzersiz Planınızı Oluşturun"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Egzersiz Adı -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Egzersiz Adı">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/exerciseNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Egzersiz Süresi (dakika) -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Egzersiz Süresi (dakika)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/exerciseDurationEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Egzersiz Zorluğu -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Zorluk Seviyesi">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/exerciseDifficultyEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Egzersiz Kaydet Butonu -->
        <Button
            android:id="@+id/saveExerciseButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:padding="12dp"
            android:text="Egzersizi Kaydet"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/geriGit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#185885"
            android:onClick="geriGit"
            android:text="Geri Git"
            android:textColor="@color/black"
            android:textSize="16sp">

        </Button>

        <Button
            android:id="@+id/devamEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#921B8F"
            android:onClick="devam"
            android:text="Devam Et"
            android:textColor="@color/black"
            android:textSize="16sp">

        </Button>

    </LinearLayout>
</ScrollView>
